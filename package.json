{
  "name": "pivotui",
  "version": "0.1.0",
  "description": "Intelligente UI-adaptatie voor AI-antwoorden via on-device LLM",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@8.0.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "docs:dev": "pnpm --filter docs dev",
    "docs:build": "pnpm --filter docs build",
    "demo:dev": "pnpm --filter demo-app dev",
    "demo:build": "pnpm --filter demo-app build",
    "validate-data": "node scripts/validate-data.js",
    "generate-samples": "node scripts/generate-samples.js",
    "export-training-data": "node scripts/export-training-data.js"
  },
  "workspaces": [
    "packages/*",
    "examples/*",
    "docs"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.0.0",
    "typescript": "^5.1.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "react",
    "typescript",
    "llm",
    "webgpu",
    "ui",
    "adaptive",
    "machine-learning",
    "components"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/pivotui.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/pivotui/issues"
  },
  "homepage": "https://github.com/yourusername/pivotui#readme",
  "license": "MIT",
  "contributors": [
    {
      "name": "PivotUI Contributors",
      "url": "https://github.com/yourusername/pivotui/graphs/contributors"
    }
  ]
}